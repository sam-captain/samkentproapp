<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.samkent.proapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.samkent.proapp.utilities.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProApp">
        <activity
            android:name="com.samkent.proapp.ExploreActivity"
            android:exported="false"
            android:label="@string/title_activity_explore" />
        <activity
            android:name="com.samkent.proapp.JobDetailsActivity"
            android:exported="false"
            android:label="@string/title_activity_job_details"
            android:theme="@style/Theme.ProApp.NoActionBar" />
        <activity
            android:name="com.samkent.proapp.ScrollingActivity"
            android:exported="false" />
        <activity
            android:name="com.samkent.proapp.JobFormActivity"
            android:exported="false" />
        <activity
            android:name="com.samkent.proapp.AuthenticationActivity"
            android:exported="false" />
        <activity
            android:name="com.samkent.proapp.ProDetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.ProApp.NoActionBar" />
        <activity
            android:name="com.samkent.proapp.HomeActivity"
            android:exported="true" />
        <activity
            android:name="com.samkent.proapp.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ProApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>