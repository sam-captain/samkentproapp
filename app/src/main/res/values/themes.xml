<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/maroon</item>
        <item name="colorPrimaryVariant">@color/maroon</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/beige</item>
        <item name="colorSecondaryVariant">@color/beige</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.ProApp.NoActionBar" parent="Theme.ProApp">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SpecialText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="cardviewstyle">
        <item name="cardCornerRadius">35dp</item>
        <item name="cardElevation">20dp</item>
    </style>

    <style name="ColorButton" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="image33tint">
        <item name="tint">@color/purple_200</item>
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <style name="image44tint">
        <item name="tint">@color/purple_200</item>
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <style name="image55tint">
        <item name="tint">@color/purple_200</item>
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <style name="image66tint">
        <item name="tint">@color/purple_200</item>
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <style name="Theme.ProApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ProApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>